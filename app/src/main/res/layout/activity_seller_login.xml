<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seller_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app_logo" />

            <RelativeLayout
                android:id="@+id/submitbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/submitbg"
                android:gravity="center">

                <TextView
                    android:id="@+id/lbl_enter_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/lbl_enter_code"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/et_login_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbl_enter_code"
                    android:layout_margin="20dp"
                    android:singleLine="true"
                    android:lines="1"
                    android:text="22222"
                    android:background="@drawable/bg_edittext"
                    android:hint="@string/lbl_enter_code"
                    android:padding="5dp" />

                <ImageView
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_login_code"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/btn_submit" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
