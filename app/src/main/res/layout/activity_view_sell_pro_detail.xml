<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/titlebar"
        layout="@layout/titlebar" />

    <RelativeLayout
        android:id="@+id/view_product_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottombarlayout"
        android:layout_below="@+id/titlebar"
        android:background="#f2f2f2">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_margin="0dp"
                android:background="@android:color/white">

                <RelativeLayout
                    android:id="@+id/imgs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#050505"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:id="@+id/viewPagerIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignBottom="@+id/pager"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:id="@+id/viewPagerCountDots"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"></LinearLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/line"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#949391" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/pro_name_rating_price_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/pro_name_rating_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">

                        <TextView
                            android:id="@+id/pro_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:text="Product Name"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp" />

                        <RatingBar
                            android:id="@+id/rating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp" />

                        <View
                            android:id="@+id/line3"
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="#949391" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pro_price_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">

                        <TextView
                            android:id="@+id/pro_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:text="20AED"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/line2"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#949391" />
                </RelativeLayout>


            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <include
        android:id="@+id/bottombarlayout"
        layout="@layout/bottombar_add_product" />

</RelativeLayout>
